<div class="container">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: "form-horizontal", role: "form" }) do |f| %>
  <fieldset>
    <legend>Sign in</legend>
    <div class="form-group">
      <%= f.label :email, :class => "col-sm-2 control-label", :for => "inputEmail3" %>
      <div class="col-sm-10">
        <%= f.email_field :email, :autofocus => true, :class => "form-control", :id => "inputEmail3", :placeholder => "Email" %>
      </div>
    </div>
  
    <div class="form-group">
      <%= f.label :password, :class => "col-sm-2 control-label", :for => "inputPassword3" %>
      <div class="col-sm-10">
        <%= f.password_field :password, :class => "form-control", :id => "inputPassword3", :placeholder => "Password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </div>
    </div>
    <% end -%>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign in", :class => "btn btn-default" %>
      </div>
    </div>
  </fieldset>
  <% end %>
  <div class="col-sm-offset-2 col-sm-10">
    <%= render "devise/shared/links" %>
  </div>
</div>